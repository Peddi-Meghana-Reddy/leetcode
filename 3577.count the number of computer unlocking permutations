from typing import List

class Solution:
    def countPermutations(self, complexity: List[int]) -> int:
        MOD = 10**9 + 7
        n = len(complexity)
        if n <= 1:
            return 1
        root = complexity[0]
        for i in range(1, n):
            if complexity[i] <= root:
                return 0
        ans = 1
        for i in range(1, n):  
            ans = (ans * i) % MOD
        return ans
