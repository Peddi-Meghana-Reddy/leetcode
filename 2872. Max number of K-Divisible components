import sys
from typing import List
sys.setrecursionlimit(1 << 25)

class Solution:
    def maxKDivisibleComponents(self, n: int, edges: List[List[int]], values: List[int], k: int) -> int:
        if n == 0:
            return 0
        adj = [[] for _ in range(n)]
        for u, v in edges:
            adj[u].append(v)
            adj[v].append(u)
        visited = [False] * n
        self.ans = 0
        def dfs(u, parent):
            subtotal = values[u] % k
            visited[u] = True
            for v in adj[u]:
                if v != parent:
                    subtotal = (subtotal + dfs(v, u)) % k
            if subtotal == 0 and u != 0:
                self.ans += 1
                return 0
            return subtotal
        root_mod = dfs(0, -1)
        return self.ans + 1
