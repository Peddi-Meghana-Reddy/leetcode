class Solution:
    def numberOfWays(self, corridor: str) -> int:
        MOD = 10**9 + 7
        seats = 0
        ways = 1
        plants_between = 0
        for ch in corridor:
            if ch == 'S':
                seats += 1
                if seats > 2 and seats % 2 == 1:
                    ways = (ways * (plants_between + 1)) % MOD
                    plants_between = 0
            else:
                if seats >= 2 and seats % 2 == 0:
                    plants_between += 1
        if seats < 2 or seats % 2 != 0:
            return 0
        return ways
