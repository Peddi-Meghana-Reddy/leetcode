class Solution:
    def maxSumDivThree(self, nums: List[int]) -> int:
        mod1 = []
        mod2 = []
        total = sum(nums)

        for x in nums:
            if x % 3 == 1:
                mod1.append(x)
            elif x % 3 == 2:
                mod2.append(x)

        mod1.sort()
        mod2.sort()

        if total % 3 == 0:
            return total
        
        if total % 3 == 1:
            remove1 = mod1[0] if mod1 else float('inf')
            remove2 = sum(mod2[:2]) if len(mod2) >= 2 else float('inf')
            return total - min(remove1, remove2)
            
        remove1 = mod2[0] if mod2 else float('inf')
        remove2 = sum(mod1[:2]) if len(mod1) >= 2 else float('inf')
        return total - min(remove1, remove2)
