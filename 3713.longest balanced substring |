class Solution:
    def longestBalanced(self, s: str) -> int:
        n = len(s)
        ans = 0
        for i in range(n):
            cnt = [0] * 26
            distinct_count = 0
            max_freq = 0
            for j in range(i, n):
                idx = ord(s[j]) - ord('a')
                cnt[idx] += 1
                if cnt[idx] == 1:
                    distinct_count += 1
                if cnt[idx] > max_freq:
                    max_freq = cnt[idx]
                if max_freq * distinct_count == (j - i + 1):
                    ans = max(ans, j - i + 1)
        return ans
